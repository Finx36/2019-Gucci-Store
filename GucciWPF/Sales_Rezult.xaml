<Window x:Class="GucciWPF.Sales_Rezult"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GucciWPF"
        mc:Ignorable="d"
        Title="Результаты продаж" Name="Sales_ResultWPF" Height="750" Width="800" Loaded="Sales_ResultWPF_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Label Name="lblTitle" Content="Качество" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
               VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontSize="30"></Label>
        <DataGrid Name="dtSalesResults" Grid.Row="1" IsReadOnly="True" Grid.Column="0" Grid.ColumnSpan="4"
                Grid.RowSpan="3" ColumnWidth="auto" AutoGenerateColumns="True" AutoGeneratingColumn="dtSalesResults_AutoGeneratingColumn" SelectionChanged="dtSalesResults_SelectionChanged">
        </DataGrid>
        <UniformGrid Grid.Row="4" Grid.Column="0">
            <StackPanel Grid.Row="2" >
                <Label Name="lblNazv_Kachestvo" Content="Выручка с товара" Grid.Row="5" ></Label>
                <Border BorderThickness="1" BorderBrush="Black"  >
                    <TextBox Name="tbNazv_Kachestvo" Grid.Row="2" 
                             Text="{Binding SelectedItem.Product_Revenue,
                                 ElementName=dtSalesResults}"></TextBox>
                </Border>
                <Label Name="lblConsumption_Of_Product" Content="Кол-во продано" Grid.Row="5" ></Label>
                <Border BorderThickness="1" BorderBrush="Black"  >
                    <TextBox Name="tbConsumption_Of_Product" Grid.Row="2" 
                             Text="{Binding SelectedItem.Count_Sold,
                                 ElementName=dtSalesResults}"></TextBox>
                </Border>
            </StackPanel>
        </UniformGrid>
        <UniformGrid Grid.Row="4" Grid.Column="1">
            <StackPanel Grid.Column="0" >
                <Label Name="lblKachestvo_Tovara" Content="" Grid.Row="5" ></Label>
                <Border BorderThickness="1" BorderBrush="Black" >
                    <TextBox Name="tbKachestvo_Tovara" Grid.Row="2" 
                             Text="{Binding  SelectedItem.Consumption_Of_Product,
                                 ElementName=dtSalesResults}"></TextBox>
                </Border>
            </StackPanel>
        </UniformGrid>
        <UniformGrid Grid.Row="5" Grid.ColumnSpan="2">
            <StackPanel>
                <Button Name="btKachestvoInsertType" Content="Добавить запись" Height="25" Click="BtKachestvoInsertType_Click" Margin="118,0,160,0"></Button>
                <Button Name="btKachestvoUpdateType" Content="Изменить запись" Height="25" Click="BtKachestvoUpdateType_Click" Margin="118,0,160,0"></Button>
                <Button Name="btKachestvoDeleteType" Content="Удалить запись" Height="25" Click="BtKachestvoDeleteType_Click" Margin="118,0,160,0"></Button>
            </StackPanel>
        </UniformGrid>
        <UniformGrid Grid.Row="6" Grid.Column="0">
            <StackPanel>
                <TextBox Name="tbSearch"  Height="30" Grid.Column="0" Margin="0,0,194,0" ></TextBox>
                <Button Name="btSearch" Content="Поиск" Height="30" VerticalAlignment="Top" Click="BtSearch_Click" Margin="0,0,194,0"></Button>
                <CheckBox x:Name="chbFilter" Content="Отфильтровать" VerticalAlignment="Center"  FontSize="10" Height="20" Click="ChbFilter_Click"/>
            </StackPanel>
        </UniformGrid>
        <Button Name="btClose" Content="Закрыть" Grid.Row="6" Grid.Column="1" Click="BtClose_Click" Margin="5,33,-5,10"/>
    </Grid>
</Window>
